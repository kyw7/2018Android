<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kywlater.myapplication.adopt_accept">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:name="com.example.kywlater.myapplication.Activity.HeadAdoptFragment"
        android:layout_alignParentTop="true"
        android:id="@+id/needinaccept"
        >

    </fragment>

    <ImageView
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:layout_below="@+id/needinaccept"
        android:id="@+id/picinaccept"/>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:background="@color/backgroud"
        android:layout_height="100dp"
        android:layout_below="@+id/picinaccept"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/needinaccept2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Address"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:textSize="18dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/needinaccept3"
        android:background="@color/backgroud"
        android:layout_below="@+id/needinaccept2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Phone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:textSize="18dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            />

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Continue"
        android:textSize="24dp"
        android:paddingRight="15dp"
        android:fontFamily="serif"
        android:paddingLeft="15dp"
        android:textAllCaps="false"
        android:background="@drawable/button_sele"
        android:alpha="0.5"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/needinaccept3"
        android:layout_marginTop="30dp"
        android:id="@+id/continuetonext"
        />

</RelativeLayout>
