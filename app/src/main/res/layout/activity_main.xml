<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroud">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_icon"
        android:fontFamily="@font/disko"
        android:layout_centerHorizontal="true"
        android:text="AnimalHelper"
        android:textSize="36sp"
        android:layout_marginTop="20dp"
        android:id="@+id/title"/>

    <android.support.v7.widget.CardView
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#FFFFFF"
        android:id="@+id/cart_account">
        <EditText
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:id="@+id/account"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:scrollHorizontally="true"
            android:hint="account"
            android:maxLines="1"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cart_account"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        android:id="@+id/cart_password"
        >
        <com.example.kywlater.myapplication.passwordEditText
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:id="@+id/password"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:inputType="textPassword"
            android:hint="password"
            android:maxLines="1"/>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:background="@drawable/button_sele"
        android:alpha="0.5"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cart_password"
        android:layout_marginTop="50dp"
        android:id="@+id/submmit"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="register"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:layout_below="@+id/submmit"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="280dp"
        android:id="@+id/register"
        android:clickable="true"/>


</RelativeLayout>
