<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_height="70dp"
        android:layout_width="360dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/backgroud"
        android:id="@+id/buttom_cardview"
        android:alpha="0.5"
        >

        <Button
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/mypets_button"
            android:background="@color/whiteb"
            android:text="Mypets"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/button_0.5"
            android:fontFamily="@font/disko"
            android:layout_gravity="left"
            />

        <Button
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/adopt_button"
            android:background="@color/whiteb"
            android:textColor="@color/button_press"
            android:text="Adopt"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:fontFamily="@font/disko"
            />

        <Button
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/info_button"
            android:background="@color/whiteb"
            android:text="Info"
            android:textSize="24sp"
            android:textColor="@color/button_0.5"
            android:textAllCaps="false"
            android:fontFamily="@font/disko"
            android:layout_gravity="right"/>


    </android.support.v7.widget.CardView>



</LinearLayout>
